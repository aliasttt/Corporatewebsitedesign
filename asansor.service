[Unit]
Description=Gunicorn instance to serve Asansor Django application
After=network.target postgresql.service

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/asansor
Environment="PATH=/var/www/asansor/venv/bin"
ExecStart=/var/www/asansor/venv/bin/gunicorn \
          --config /var/www/asansor/gunicorn_config.py \
          config.wsgi:application

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
